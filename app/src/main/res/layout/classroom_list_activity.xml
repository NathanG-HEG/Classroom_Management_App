<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/accountsRecyclerView"
        android:layout_width="360dp"
        android:layout_height="607dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/createClassroomFromListButton"
        app:layout_constraintVertical_bias="0.541" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/createClassroomFromListButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="28dp"
        android:clickable="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_input_add" />

    <TextView
        android:id="@+id/greetingsTv"
        android:layout_width="294dp"
        android:layout_height="55dp"
        android:gravity="center|start"
        android:text="Greetings"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toBottomOf="@+id/createClassroomFromListButton"
        app:layout_constraintEnd_toStartOf="@+id/createClassroomFromListButton"
        app:layout_constraintStart_toStartOf="@+id/accountsRecyclerView"
        app:layout_constraintTop_toTopOf="@+id/createClassroomFromListButton" />
</androidx.constraintlayout.widget.ConstraintLayout>